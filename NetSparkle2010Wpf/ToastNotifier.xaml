<Window x:Class="NetSparkle2010Wpf.ToastNotifier"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="ToastNotifier" Height="84" Width="300" MouseUp="Window_MouseUp" Loaded="Window_Loaded" ResizeMode="NoResize" WindowStyle="None">
	<Grid Margin="0,0,0,-152">
		<Image x:Name="Image" HorizontalAlignment="Left" Height="43" Margin="10,10,0,0" VerticalAlignment="Top" Width="39"/>
		<Label x:Name="_message" Content="Notification Text" HorizontalAlignment="Left" Margin="54,10,0,0" VerticalAlignment="Top" FontSize="16"/>
		<TextBlock Margin="54,46,0,165" >           
			<Hyperlink x:Name="_callToAction" NavigateUri="http://www.google.com" Click="Hyperlink_Click">
				Click here
			</Hyperlink>
		</TextBlock>
	</Grid>
</Window>
