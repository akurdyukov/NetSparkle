<Window x:Class="NetSparkle2010Wpf.NetSparkleDownloadProgress"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="NetSparkleDownloadProgress" Height="159" Width="378">
	<Grid Margin="0,0,0,-147">
		<Image x:Name="imgAppIcon" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Margin="22,22,0,0">
			<Image.Source>
				<BitmapImage UriSource="/Resources/software-update-available.bmp"/>
			</Image.Source>
		</Image>
		<Label x:Name="lblHeader" Content="Downloading APP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="92,15,0,0" FontWeight="Bold" FontSize="14"/>
		<ProgressBar x:Name="progressDownload" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="280" Margin="75,49,0,0"/>
		<Button x:Name="btnInstallAndReLaunch" Content="Install and Relaunch" HorizontalAlignment="Left" Margin="155,49,0,0" VerticalAlignment="Top" Width="133" Click="btnInstallAndReLaunch_Click"/>
		<TextBlock x:Name="lblSecurityHint" TextWrapping="Wrap" Margin="75,85,15,156" Text="The update was affected by not verified changes, it could be unsafe to install it!" FontWeight="Bold"/>

	</Grid>
</Window>
